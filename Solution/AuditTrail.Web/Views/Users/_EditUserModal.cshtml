@model AuditTrail.Web.Models.EditUserViewModel

<div class="modal fade" id="editUserModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <form id="editUserForm" asp-action="Edit" asp-controller="Users" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="modal-header bg-secondary text-white">
                    <h5 class="modal-title" id="editUserModalLabel">
                        <i class="bi bi-person-gear me-2"></i>
                        Editar Usuario
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                
                <div class="modal-body">
                    <div class="row g-3">
                        <!-- Account Information Section -->
                        <div class="col-12">
                            <h6 class="border-bottom pb-2 mb-3 text-secondary">
                                <i class="bi bi-person-circle me-2"></i>
                                Información de la Cuenta
                            </h6>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label">
                                <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.Username)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-at"></i>
                                </span>
                                <input asp-for="Username" class="form-control" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">
                                <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.Email)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <!-- Personal Information Section -->
                        <div class="col-12 mt-4">
                            <h6 class="border-bottom pb-2 mb-3 text-secondary">
                                <i class="bi bi-person-vcard me-2"></i>
                                Información Personal
                            </h6>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">
                                <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.FirstName)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="FirstName" class="form-control" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">
                                <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.LastName)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="LastName" class="form-control" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-12">
                            <label asp-for="RoleId" class="form-label">
                                <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.RoleId)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-shield-lock"></i>
                                </span>
                                <select asp-for="RoleId" asp-items="Model.Roles" class="form-select">
                                    <option value="">-- Seleccionar Rol --</option>
                                </select>
                            </div>
                            <span asp-validation-for="RoleId" class="text-danger small"></span>
                        </div>
                        
                        <!-- Password Change Section -->
                        <div class="col-12 mt-4">
                            <h6 class="border-bottom pb-2 mb-3 text-secondary">
                                <i class="bi bi-key me-2"></i>
                                Cambio de Contraseña
                            </h6>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ChangePassword" class="form-check-input" type="checkbox" onchange="togglePasswordFields(this)" />
                                <label asp-for="ChangePassword" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.ChangePassword)
                                </label>
                            </div>
                        </div>
                        
                        <div id="passwordFields" style="display: none;">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="NewPassword" class="form-label">
                                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.NewPassword)
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <input asp-for="NewPassword" class="form-control" type="password" />
                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('NewPassword', this)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                </div>
                                
                                <div class="col-md-6">
                                    <label asp-for="ConfirmNewPassword" class="form-label">
                                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.ConfirmNewPassword)
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-lock-fill"></i>
                                        </span>
                                        <input asp-for="ConfirmNewPassword" class="form-control" type="password" />
                                        <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('ConfirmNewPassword', this)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Account Settings Section -->
                        <div class="col-12 mt-4">
                            <h6 class="border-bottom pb-2 mb-3 text-secondary">
                                <i class="bi bi-gear me-2"></i>
                                Configuración de la Cuenta
                            </h6>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.IsActive)
                                </label>
                            </div>
                            <div class="form-text">El usuario puede iniciar sesión</div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsEmailVerified" class="form-check-input" type="checkbox" />
                                <label asp-for="IsEmailVerified" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.IsEmailVerified)
                                </label>
                            </div>
                            <div class="form-text">Email confirmado</div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="MustChangePassword" class="form-check-input" type="checkbox" />
                                <label asp-for="MustChangePassword" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.MustChangePassword)
                                </label>
                            </div>
                            <div class="form-text">Forzar cambio en el próximo inicio</div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsLocked" class="form-check-input" type="checkbox" disabled />
                                <label asp-for="IsLocked" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.IsLocked)
                                </label>
                            </div>
                            <div class="form-text">
                                @if (Model.IsLocked)
                                {
                                    <span class="text-danger">Bloqueado hasta: @Model.LockoutEnd?.ToString("dd/MM/yyyy HH:mm")</span>
                                }
                                else
                                {
                                    <span>Cuenta activa</span>
                                }
                            </div>
                        </div>
                        
                        <!-- Audit Information Section -->
                        <div class="col-12 mt-4">
                            <h6 class="border-bottom pb-2 mb-3 text-secondary">
                                <i class="bi bi-clock-history me-2"></i>
                                Información de Auditoría
                            </h6>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label text-muted">Fecha de Creación</label>
                            <div class="form-control-plaintext">
                                <i class="bi bi-calendar3 me-2"></i>
                                @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label text-muted">Último Acceso</label>
                            <div class="form-control-plaintext">
                                @if (Model.LastLoginDate.HasValue)
                                {
                                    <span>
                                        <i class="bi bi-clock me-2"></i>
                                        @Model.LastLoginDate.Value.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                    @if (!string.IsNullOrEmpty(Model.LastLoginIP))
                                    {
                                        <span class="ms-2">
                                            <i class="bi bi-geo-alt me-1"></i>
                                            @Model.LastLoginIP
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Nunca ha iniciado sesión</span>
                                }
                            </div>
                        </div>
                        
                        @if (Model.FailedLoginAttempts > 0)
                        {
                            <div class="col-md-6">
                                <label class="form-label text-muted">Intentos Fallidos</label>
                                <div class="form-control-plaintext">
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        @Model.FailedLoginAttempts intentos
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-3 d-none" role="alert"></div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="editUserBtn">
                        <i class="bi bi-check-circle me-2"></i>
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function togglePasswordVisibility(fieldId, button) {
        var field = document.getElementById(fieldId);
        var icon = button.querySelector('i');
        
        if (field.type === "password") {
            field.type = "text";
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            field.type = "password";
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    }
    
    function togglePasswordFields(checkbox) {
        var passwordFields = document.getElementById('passwordFields');
        if (checkbox.checked) {
            passwordFields.style.display = 'block';
        } else {
            passwordFields.style.display = 'none';
            // Clear password fields when hidden
            document.getElementById('NewPassword').value = '';
            document.getElementById('ConfirmNewPassword').value = '';
        }
    }
</script>

<style>
    /* Ensure modal footer is always visible */
    .modal-dialog-scrollable .modal-content {
        max-height: 90vh;
    }
    
    .modal-dialog-scrollable .modal-body {
        max-height: calc(90vh - 200px);
        overflow-y: auto;
    }
    
    .modal-footer {
        border-top: 1px solid #dee2e6;
        background-color: #f8f9fa;
        flex-shrink: 0;
    }
</style>