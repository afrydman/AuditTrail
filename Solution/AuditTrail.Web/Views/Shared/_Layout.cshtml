@{
    var cacheBuster = DateTimeOffset.UtcNow.ToUnixTimeSeconds();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sistema AuditTrail</title>
    
    <!-- Meta -->
    <meta name="description" content="CFR 21 Part 11 Compliant Audit Trail System" />
    <meta name="author" content="AuditTrail System" />
    <link rel="shortcut icon" href="~/images/favicon.svg" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/fonts/bootstrap/bootstrap-icons.css?v=@cacheBuster" />
    <link rel="stylesheet" href="~/css/main.min.css?v=@cacheBuster" />
    <link rel="stylesheet" href="~/css/site.css?v=@cacheBuster" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Page wrapper start -->
    <div class="page-wrapper">
        
        <!-- App header starts -->
        <div class="app-header d-flex align-items-center">
            
            <!-- Toggle buttons start -->
            <div class="d-flex">
                <button class="toggle-sidebar" id="toggle-sidebar">
                    <i class="bi bi-list lh-1"></i>
                </button>
                <button class="pin-sidebar" id="pin-sidebar">
                    <i class="bi bi-list lh-1"></i>
                </button>
            </div>
            <!-- Toggle buttons end -->

            <!-- App brand starts -->
            <div class="app-brand py-2 ms-3">
                <a href="@Url.Action("Index", "Dashboard")" class="d-sm-block d-none">
                    <img src="~/images/audittrail-logo.svg" class="logo" alt="AuditTrail System" style="height: 40px;" />
                </a>
                <a href="@Url.Action("Index", "Dashboard")" class="d-sm-none d-block">
                    <img src="~/images/audittrail-logo-sm.svg" class="logo" alt="AuditTrail System" style="height: 40px; width: 40px;" />
                </a>
            </div>
            <!-- App brand ends -->

            <!-- App header actions start -->
            <div class="header-actions col">
                <div class="d-lg-flex d-none">
                    <!-- Notifications dropdown -->
                    <div class="dropdown border-start">
                        <a class="dropdown-toggle d-flex px-3 py-4 position-relative" href="#!" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-bell fs-4 lh-1 text-secondary"></i>
                            <span class="count-label"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end shadow-lg">
                            <h5 class="fw-semibold px-3 py-2 text-primary">Notificaciones</h5>
                            <div class="dropdown-item">
                                <div class="d-flex py-2">
                                    <div class="icon-box md bg-info rounded-circle me-3">
                                        <i class="bi bi-file-earmark text-white"></i>
                                    </div>
                                    <div class="m-0">
                                        <h6 class="mb-1 fw-semibold">Documento cargado</h6>
                                        <p class="mb-1 text-secondary">Nueva versión de protocolo disponible</p>
                                        <p class="small m-0 text-secondary">Hace 2 minutos</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User profile dropdown -->
                <div class="dropdown ms-2">
                    <a id="userSettings" class="dropdown-toggle d-flex py-2 align-items-center text-decoration-none"
                       href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="d-flex align-items-center justify-content-center rounded-circle bg-primary text-white" style="width: 36px; height: 36px;">
                            <i class="bi bi-person-fill fs-5"></i>
                        </div>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="ms-2 text-truncate d-lg-block d-none">
                                <span class="d-flex flex-column">
                                    <span class="fw-semibold lh-1">@User.FindFirst("FirstName")?.Value @User.FindFirst("LastName")?.Value</span>
                                    <span class="text-secondary small">@User.Identity.Name</span>
                                </span>
                            </div>
                        }
                    </a>
                    <div class="dropdown-menu dropdown-menu-end shadow-lg">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("SessionActivity", "Account")">
                                <i class="bi bi-clock-history me-3"></i>
                                Registro de Actividad de Sesión
                            </a>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("EditProfile", "Account")">
                                <i class="bi bi-person-gear me-3"></i>
                                Editar Perfil
                            </a>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("EmailNotifications", "Account")">
                                <i class="bi bi-envelope-at me-3"></i>
                                Notificaciones por Email
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Logout", "Account")">
                                <i class="bi bi-box-arrow-right me-3"></i>
                                Cerrar Sesión
                            </a>
                        }
                        else
                        {
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Login", "Account")">
                                <i class="bi bi-box-arrow-in-right me-3"></i>
                                Iniciar Sesión
                            </a>
                        }
                    </div>
                </div>
            </div>
            <!-- App header actions end -->

        </div>
        <!-- App header ends -->

        <!-- Main container start -->
        <div class="main-container">

            @if (User.Identity?.IsAuthenticated == true)
            {
                <!-- Sidebar wrapper start -->
                <nav id="sidebar" class="sidebar-wrapper">

                    <!-- Sidebar content start -->
                    <div class="sidebar-content">

                        <!-- sidebar menu start -->
                        <div class="sidebar-menu">
                            <ul>
                                <li>
                                    <a href="@Url.Action("Index", "Dashboard")" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "current-page" : "")">
                                        <i class="bi bi-house"></i>
                                        <span class="menu-text">Panel de Control</span>
                                    </a>
                                </li>
                                <li class="sidebar-dropdown">
                                    <a href="#" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Files" ? "current-page" : "")">
                                        <i class="bi bi-folder"></i>
                                        <span class="menu-text">Gestión de Documentos</span>
                                    </a>
                                    <div class="sidebar-submenu">
                                        <ul>
                                            <li><a href="@Url.Action("Index", "Files")">Explorar Archivos</a></li>
                                            <li><a href="@Url.Action("Upload", "Files")">Cargar Documentos</a></li>
                                            <li><a href="@Url.Action("Categories", "Files")">Administrar Carpetas</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Audit")" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Audit" ? "current-page" : "")">
                                        <i class="bi bi-journal-text"></i>
                                        <span class="menu-text">Registro de Auditoría</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Users")" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "current-page" : "")">
                                        <i class="bi bi-people"></i>
                                        <span class="menu-text">Gestión de Usuarios</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Permissions")" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Permissions" ? "current-page" : "")">
                                        <i class="bi bi-shield-lock"></i>
                                        <span class="menu-text">Permisos</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Reports")" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "current-page" : "")">
                                        <i class="bi bi-graph-up"></i>
                                        <span class="menu-text">Reportes</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Settings")" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "current-page" : "")">
                                        <i class="bi bi-gear"></i>
                                        <span class="menu-text">Configuración del Sistema</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- sidebar menu end -->

                    </div>
                    <!-- Sidebar content end -->
                    
                </nav>
                <!-- Sidebar wrapper end -->
            }

            <!-- App body starts -->
            <div class="app-body">

                <!-- Container starts -->
                <div class="container-fluid">

                    <!-- Page header starts -->
                    <div class="page-header">
                        <div class="toggle-sidebar" id="toggle-sidebar2">
                            <i class="bi bi-list"></i>
                        </div>
                        
                        <!-- Breadcrumb start -->
                        <ol class="breadcrumb d-md-flex d-none">
                            <li class="breadcrumb-item">
                                <i class="bi bi-house"></i>
                                <a href="@Url.Action("Index", "Dashboard")">Inicio</a>
                            </li>
                            @if (ViewData["Breadcrumb"] != null)
                            {
                                @Html.Raw(ViewData["Breadcrumb"])
                            }
                            else if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
                            {
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            }
                        </ol>
                        <!-- Breadcrumb end -->
                    </div>
                    <!-- Page header ends -->

                    <!-- Content wrapper scroll start -->
                    <div class="content-wrapper-scroll">

                        <!-- Content wrapper start -->
                        <div class="content-wrapper">

                            <!-- Row start -->
                            <div class="row">
                                <div class="col-sm-12">
                                    @RenderBody()
                                </div>
                            </div>
                            <!-- Row end -->

                        </div>
                        <!-- Content wrapper end -->

                    </div>
                    <!-- Content wrapper scroll end -->

                </div>
                <!-- Container ends -->

            </div>
            <!-- App body ends -->

        </div>
        <!-- Main container end -->

    </div>
    <!-- Page wrapper end -->

    <!-- Required jQuery first, then Bootstrap Bundle JS -->
    <script src="~/js/jquery.min.js?v=@cacheBuster"></script>
    <script src="~/js/bootstrap.bundle.min.js?v=@cacheBuster"></script>
    <script src="~/js/modernizr.js?v=@cacheBuster"></script>
    <script src="~/js/moment.min.js?v=@cacheBuster"></script>

    <!-- Custom JS Files -->
    <script src="~/js/custom.js?v=@cacheBuster"></script>
    <script src="~/js/site.js?v=@cacheBuster"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
