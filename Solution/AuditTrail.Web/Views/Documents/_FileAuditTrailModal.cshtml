<!-- File Audit Trail Modal -->
<div class="modal fade" id="fileAuditTrailModal" tabindex="-1" aria-labelledby="fileAuditTrailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="fileAuditTrailModalLabel">
                    <i class="bi bi-clock-history me-2"></i>
                    Auditoría de Archivo: <span id="auditFileName"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- File Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            Información del Archivo
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Nombre:</dt>
                                    <dd class="col-sm-8" id="auditFileNameDetail"></dd>
                                    <dt class="col-sm-4">Tamaño:</dt>
                                    <dd class="col-sm-8" id="auditFileSize"></dd>
                                    <dt class="col-sm-4">Tipo:</dt>
                                    <dd class="col-sm-8" id="auditFileType"></dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Subido por:</dt>
                                    <dd class="col-sm-8" id="auditUploadedBy"></dd>
                                    <dt class="col-sm-4">Fecha de subida:</dt>
                                    <dd class="col-sm-8" id="auditUploadedDate"></dd>
                                    <dt class="col-sm-4">Carpeta:</dt>
                                    <dd class="col-sm-8" id="auditFolderPath"></dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Audit Trail -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Historial de Cambios
                        </h6>
                        <div class="btn-group btn-group-sm" role="group">
                            <input type="radio" class="btn-check" name="auditFilter" id="allEvents" autocomplete="off" checked>
                            <label class="btn btn-outline-secondary" for="allEvents">Todos</label>

                            <input type="radio" class="btn-check" name="auditFilter" id="accessEvents" autocomplete="off">
                            <label class="btn btn-outline-info" for="accessEvents">Acceso</label>

                            <input type="radio" class="btn-check" name="auditFilter" id="modificationEvents" autocomplete="off">
                            <label class="btn btn-outline-warning" for="modificationEvents">Modificaciones</label>

                            <input type="radio" class="btn-check" name="auditFilter" id="securityEvents" autocomplete="off">
                            <label class="btn btn-outline-danger" for="securityEvents">Seguridad</label>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <!-- Loading state -->
                        <div id="auditTrailLoading" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando auditoría...</span>
                            </div>
                            <div class="mt-2">Cargando historial de auditoría...</div>
                        </div>

                        <!-- Audit Trail Table -->
                        <div id="auditTrailContent" class="d-none">
                            <div class="table-responsive">
                                <table class="table table-hover table-sm mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 140px;">Fecha/Hora</th>
                                            <th style="width: 120px;">Usuario</th>
                                            <th style="width: 100px;">Acción</th>
                                            <th style="width: 80px;">Resultado</th>
                                            <th>Detalles</th>
                                            <th style="width: 120px;">IP/Ubicación</th>
                                        </tr>
                                    </thead>
                                    <tbody id="auditTrailTableBody">
                                        <!-- Dynamic content will be inserted here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Empty state -->
                        <div id="auditTrailEmpty" class="text-center py-5 d-none">
                            <i class="bi bi-clock-history fs-1 text-muted"></i>
                            <h5 class="mt-3">No hay registros de auditoría</h5>
                            <p class="text-muted">No se encontraron eventos de auditoría para este archivo.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" onclick="exportAuditTrail()">
                    <i class="bi bi-download me-2"></i>
                    Exportar Auditoría
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

