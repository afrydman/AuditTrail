    .audit-event-success { color: #198754; }
    .audit-event-warning { color: #fd7e14; }
    .audit-event-danger { color: #dc3545; }
    .audit-event-info { color: #0dcaf0; }
    
    .audit-badge {
        font-size: 0.75rem;
        padding: 0.25em 0.5em;
    }
    
    #auditTrailContent .table th {
        border-bottom: 2px solid #dee2e6;
