@{
    ViewData["Title"] = "Dashboard";
    ViewData["Breadcrumb"] = "<li class=\"breadcrumb-item active\" aria-current=\"page\">Dashboard</li>";
}

<!-- Row start -->
<div class="row">
    
    <!-- Welcome Message -->
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="icon-box lg bg-primary text-white rounded-circle me-3">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <div>
                        <h4 class="mb-1">
                            Welcome back, @(User.FindFirst("FirstName")?.Value ?? User.Identity?.Name)!
                        </h4>
                        <p class="text-muted mb-0">
                            <i class="bi bi-calendar me-1"></i>
                            Today is @DateTime.Now.ToString("dddd, MMMM d, yyyy")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Statistics -->
    <div class="col-xxl-3 col-sm-6 col-12">
        <div class="stats-tile">
            <div class="sale-icon shade-blue">
                <i class="bi bi-file-earmark"></i>
            </div>
            <div class="sale-details">
                <h3 class="text-blue">1,247</h3>
                <p>Total Documents</p>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-sm-6 col-12">
        <div class="stats-tile">
            <div class="sale-icon shade-green">
                <i class="bi bi-upload"></i>
            </div>
            <div class="sale-details">
                <h3 class="text-green">23</h3>
                <p>Documents Today</p>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-sm-6 col-12">
        <div class="stats-tile">
            <div class="sale-icon shade-yellow">
                <i class="bi bi-people"></i>
            </div>
            <div class="sale-details">
                <h3 class="text-yellow">45</h3>
                <p>Active Users</p>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-sm-6 col-12">
        <div class="stats-tile">
            <div class="sale-icon shade-red">
                <i class="bi bi-journal-text"></i>
            </div>
            <div class="sale-details">
                <h3 class="text-red">12,459</h3>
                <p>Audit Entries</p>
            </div>
        </div>
    </div>

</div>
<!-- Row end -->

<!-- Row start -->
<div class="row">

    <!-- Recent Activity -->
    <div class="col-lg-8 col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <i class="bi bi-activity me-2"></i>
                    Recent Activity
                </div>
            </div>
            <div class="card-body">
                <div class="activity-container">
                    <div class="activity-item">
                        <div class="activity-icon bg-success">
                            <i class="bi bi-upload text-white"></i>
                        </div>
                        <div class="activity-content">
                            <h6 class="activity-title">Document Uploaded</h6>
                            <p class="activity-desc">Protocol Amendment v2.1 uploaded by Dr. Sarah Johnson</p>
                            <div class="activity-time text-muted">
                                <i class="bi bi-clock me-1"></i>
                                2 minutes ago
                            </div>
                        </div>
                    </div>
                    
                    <div class="activity-item">
                        <div class="activity-icon bg-info">
                            <i class="bi bi-eye text-white"></i>
                        </div>
                        <div class="activity-content">
                            <h6 class="activity-title">Document Accessed</h6>
                            <p class="activity-desc">Clinical Study Report downloaded by Monitor Team</p>
                            <div class="activity-time text-muted">
                                <i class="bi bi-clock me-1"></i>
                                15 minutes ago
                            </div>
                        </div>
                    </div>

                    <div class="activity-item">
                        <div class="activity-icon bg-warning">
                            <i class="bi bi-person-plus text-white"></i>
                        </div>
                        <div class="activity-content">
                            <h6 class="activity-title">User Permission Updated</h6>
                            <p class="activity-desc">Clinical Data Associate role assigned to John Smith</p>
                            <div class="activity-time text-muted">
                                <i class="bi bi-clock me-1"></i>
                                1 hour ago
                            </div>
                        </div>
                    </div>

                    <div class="activity-item">
                        <div class="activity-icon bg-danger">
                            <i class="bi bi-shield-exclamation text-white"></i>
                        </div>
                        <div class="activity-content">
                            <h6 class="activity-title">Security Alert</h6>
                            <p class="activity-desc">Failed login attempts detected from unknown IP</p>
                            <div class="activity-time text-muted">
                                <i class="bi bi-clock me-1"></i>
                                3 hours ago
                            </div>
                        </div>
                    </div>

                    <div class="activity-item">
                        <div class="activity-icon bg-primary">
                            <i class="bi bi-file-earmark-check text-white"></i>
                        </div>
                        <div class="activity-content">
                            <h6 class="activity-title">Document Approved</h6>
                            <p class="activity-desc">Statistical Analysis Plan approved by Principal Investigator</p>
                            <div class="activity-time text-muted">
                                <i class="bi bi-clock me-1"></i>
                                4 hours ago
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index", "Audit")" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-journal-text me-1"></i>
                    View Full Audit Trail
                </a>
            </div>
        </div>
    </div>

    <!-- System Status & Quick Actions -->
    <div class="col-lg-4 col-12">
        
        <!-- System Status -->
        <div class="card mb-4">
            <div class="card-header">
                <div class="card-title">
                    <i class="bi bi-shield-check me-2"></i>
                    System Status
                </div>
            </div>
            <div class="card-body">
                <div class="system-status">
                    <div class="status-item d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h6 class="mb-0">CFR 21 Part 11 Compliance</h6>
                            <small class="text-muted">Regulatory Requirements</small>
                        </div>
                        <span class="badge bg-success">Active</span>
                    </div>
                    
                    <div class="status-item d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h6 class="mb-0">Audit Trail Integrity</h6>
                            <small class="text-muted">Data Protection</small>
                        </div>
                        <span class="badge bg-success">Verified</span>
                    </div>
                    
                    <div class="status-item d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h6 class="mb-0">Database Backup</h6>
                            <small class="text-muted">Last backup: Today 03:00 AM</small>
                        </div>
                        <span class="badge bg-success">Complete</span>
                    </div>
                    
                    <div class="status-item d-flex align-items-center justify-content-between mb-0">
                        <div>
                            <h6 class="mb-0">System Health</h6>
                            <small class="text-muted">Performance metrics</small>
                        </div>
                        <span class="badge bg-success">Optimal</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <i class="bi bi-lightning me-2"></i>
                    Quick Actions
                </div>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Upload", "Files")" class="btn btn-outline-primary">
                        <i class="bi bi-upload me-2"></i>
                        Upload Document
                    </a>
                    <a href="@Url.Action("Index", "Files")" class="btn btn-outline-secondary">
                        <i class="bi bi-search me-2"></i>
                        Browse Files
                    </a>
                    <a href="@Url.Action("Index", "Audit")" class="btn btn-outline-info">
                        <i class="bi bi-journal-text me-2"></i>
                        View Audit Trail
                    </a>
                    <a href="@Url.Action("Index", "Users")" class="btn btn-outline-warning">
                        <i class="bi bi-people me-2"></i>
                        Manage Users
                    </a>
                    <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-success">
                        <i class="bi bi-graph-up me-2"></i>
                        Generate Reports
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>
<!-- Row end -->

<!-- Row start -->
<div class="row">
    
    <!-- Compliance Summary -->
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <i class="bi bi-clipboard-check me-2"></i>
                    CFR 21 Part 11 Compliance Summary
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 col-6">
                        <div class="compliance-metric text-center p-3">
                            <div class="metric-icon mb-2">
                                <i class="bi bi-shield-lock text-success" style="font-size: 2rem;"></i>
                            </div>
                            <h5 class="text-success mb-1">100%</h5>
                            <p class="text-muted mb-0">Access Control</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="compliance-metric text-center p-3">
                            <div class="metric-icon mb-2">
                                <i class="bi bi-journal-text text-success" style="font-size: 2rem;"></i>
                            </div>
                            <h5 class="text-success mb-1">100%</h5>
                            <p class="text-muted mb-0">Audit Trail</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="compliance-metric text-center p-3">
                            <div class="metric-icon mb-2">
                                <i class="bi bi-file-earmark-check text-success" style="font-size: 2rem;"></i>
                            </div>
                            <h5 class="text-success mb-1">100%</h5>
                            <p class="text-muted mb-0">Data Integrity</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="compliance-metric text-center p-3">
                            <div class="metric-icon mb-2">
                                <i class="bi bi-person-check text-success" style="font-size: 2rem;"></i>
                            </div>
                            <h5 class="text-success mb-1">100%</h5>
                            <p class="text-muted mb-0">User Validation</p>
                        </div>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        System maintains full compliance with FDA CFR 21 Part 11 requirements for electronic records and electronic signatures.
                        Last compliance check: @DateTime.Now.ToString("MMM d, yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Row end -->

@section Styles {
    <style>
        .activity-container {
            max-height: 400px;
            overflow-y: auto;
        }
        
        .activity-item {
            display: flex;
            align-items: flex-start;
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .activity-item:last-child {
            border-bottom: none;
        }
        
        .activity-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 15px;
            flex-shrink: 0;
        }
        
        .activity-content {
            flex: 1;
        }
        
        .activity-title {
            margin-bottom: 5px;
            font-weight: 600;
            color: #333;
        }
        
        .activity-desc {
            margin-bottom: 5px;
            color: #666;
            font-size: 14px;
        }
        
        .activity-time {
            font-size: 12px;
        }
        
        .compliance-metric {
            border-right: 1px solid #f0f0f0;
        }
        
        .compliance-metric:last-child {
            border-right: none;
        }
        
        @@media (max-width: 768px) {
            .compliance-metric {
                border-right: none;
                border-bottom: 1px solid #f0f0f0;
            }
            .compliance-metric:last-child {
                border-bottom: none;
            }
        }
    </style>
}