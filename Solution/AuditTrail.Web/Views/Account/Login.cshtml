@model LoginViewModel
@{
    Layout = null; // Use no layout for login page
    var cacheBuster = DateTimeOffset.UtcNow.ToUnixTimeSeconds();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Iniciar Sesión - Sistema AuditTrail</title>
    
    <!-- Meta -->
    <meta name="description" content="Sistema de Auditoría Conforme CFR 21 Parte 11" />
    <meta name="author" content="Sistema AuditTrail" />
    <link rel="shortcut icon" href="~/images/favicon.svg" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/fonts/bootstrap/bootstrap-icons.css?v=@cacheBuster" />
    <link rel="stylesheet" href="~/css/main.min.css?v=@cacheBuster" />
    <link rel="stylesheet" href="~/css/login.css?v=@cacheBuster" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Information Panel (Left Side) -->
            <div class="info-panel">
                <div class="info-content">
                    <!-- Logo -->
                    <div class="brand-logo">
                        <img src="~/images/audittrail-logo-sm.svg" alt="Sistema AuditTrail" style="width: 50px; height: 50px; filter: brightness(0) invert(1);">
                    </div>
                    
                    <!-- Main Title -->
                    <h2 class="mb-4 fw-bold">Sistema AuditTrail</h2>
                    <p class="fs-5 mb-4 opacity-90">Plataforma de Gestión de Documentos Conforme CFR 21 Parte 11</p>
                    
                    <!-- Compliance Badge -->
                    <div class="mb-4">
                        <span class="badge" style="background: rgba(255,255,255,0.2); color: white; padding: 0.7rem 1.2rem; border-radius: 20px; font-size: 0.9rem;">
                            <i class="bi bi-shield-check me-2"></i>
                            Certificado FDA CFR 21 Parte 11
                        </span>
                    </div>
                    
                    <!-- Features List -->
                    <ul class="feature-list">
                        <li class="d-flex align-items-center">
                            <div class="feature-icon">
                                <i class="bi bi-shield-lock text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Acceso Seguro</h6>
                                <small class="opacity-75">Autenticación robusta con registro completo de auditoría</small>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="feature-icon">
                                <i class="bi bi-journal-text text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Registro de Auditoría</h6>
                                <small class="opacity-75">Trazabilidad completa de todas las actividades del sistema</small>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="feature-icon">
                                <i class="bi bi-file-earmark-check text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Control de Documentos</h6>
                                <small class="opacity-75">Gestión de versiones y control de acceso granular</small>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="feature-icon">
                                <i class="bi bi-graph-up text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Reportes de Cumplimiento</h6>
                                <small class="opacity-75">Generación automática de reportes regulatorios</small>
                            </div>
                        </li>
                    </ul>
                    
                    <!-- Footer Info -->
                    <div class="mt-5">
                        <small class="opacity-75">
                            <i class="bi bi-building me-2"></i>
                            Diseñado para la industria farmacéutica y de investigación clínica
                        </small>
                    </div>
                </div>
            </div>
            
            <!-- Login Form Panel (Right Side) -->
            <div class="login-panel">
                <div class="login-form">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-dark">Iniciar Sesión</h3>
                        <p class="text-muted">Accede a tu cuenta para continuar</p>
                    </div>
                    
                    <div class="compliance-badge text-center d-block">
                        <i class="bi bi-shield-check me-2"></i>
                        Sesión Segura CFR 21 Parte 11
                    </div>

                    <form asp-action="Login" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Username Field -->
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" id="username" placeholder="Usuario" required>
                            <label for="username">
                                <i class="bi bi-person me-2"></i>Usuario
                            </label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating position-relative">
                            <input asp-for="Password" type="password" class="form-control pe-5" id="password" placeholder="Contraseña" required>
                            <label for="password">
                                <i class="bi bi-lock me-2"></i>Contraseña
                            </label>
                            <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y pe-3 border-0 bg-transparent" 
                                    id="togglePassword" style="z-index: 10;">
                                <i class="bi bi-eye" id="toggleIcon"></i>
                            </button>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Login Button -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-login">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Iniciar Sesión
                            </button>
                        </div>
                    </form>

                    <!-- Security Notice -->
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Todas las actividades de sesión son registradas para cumplimiento regulatorio.
                        </small>
                    </div>
                    
                    <!-- Help Info -->
                    <div class="mt-4 p-3 bg-light rounded-3">
                        <div class="text-center">
                            <small class="text-muted">
                                <strong>¿Necesitas ayuda?</strong><br>
                                Contacta al administrador del sistema para soporte técnico
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/js/jquery.min.js?v=@cacheBuster"></script>
    <script src="~/js/bootstrap.bundle.min.js?v=@cacheBuster"></script>
    <script src="~/js/login.js?v=@cacheBuster"></script>
</body>
</html>