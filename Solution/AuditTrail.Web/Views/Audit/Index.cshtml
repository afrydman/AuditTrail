@model AuditTrail.Web.Models.AuditIndexViewModel
@{
    ViewData["Title"] = "Registro de Auditoría";
    ViewData["Breadcrumb"] = "<li class=\"breadcrumb-item active\" aria-current=\"page\">Registro de Auditoría</li>";
}

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-12">
        <!-- Page header -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="mb-1">
                            <i class="bi bi-journal-text text-primary me-2"></i>
                            Registro de Auditoría
                        </h4>
                        <p class="text-muted mb-0">Monitoreo completo de actividades del sistema - CFR 21 Part 11</p>
                    </div>
                    <div class="col-auto">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary active" id="tableViewBtn" onclick="switchView('table')">
                                <i class="bi bi-table me-2"></i>
                                Tabla
                            </button>
                            <button type="button" class="btn btn-outline-primary" id="dashboardViewBtn" onclick="switchView('dashboard')" disabled>
                                <i class="bi bi-graph-up me-2"></i>
                                Dashboard
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="exportAuditTrail()">
                                <i class="bi bi-download me-2"></i>
                                Exportar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters Card -->
        <div class="card mb-4">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">
                            <i class="bi bi-funnel me-2"></i>
                            Filtros de Búsqueda
                        </h6>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="clearAllFilters()">
                            <i class="bi bi-x-circle me-1"></i>
                            Limpiar Filtros
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form id="auditFiltersForm">
                    <div class="row g-3">
                        <!-- Date Range -->
                        <div class="col-md-6 col-lg-3">
                            <label class="form-label">Rango de Fechas</label>
                            <div class="input-group">
                                <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")">
                                <span class="input-group-text">a</span>
                                <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="mt-1">
                                <div class="btn-group btn-group-sm" role="group">
                                    @foreach (var preset in Model.DatePresets)
                                    {
                                        <button type="button" class="btn btn-outline-secondary" onclick="setDatePreset(@preset.Days)">
                                            @preset.Name
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- User Filter -->
                        <div class="col-md-6 col-lg-2">
                            <label for="userFilter" class="form-label">Usuario</label>
                            <select class="form-select" id="userFilter" name="userId">
                                <option value="">Todos los usuarios</option>
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Id">@user.DisplayName</option>
                                }
                            </select>
                        </div>

                        <!-- Event Type Filter -->
                        <div class="col-md-6 col-lg-2">
                            <label for="eventTypeFilter" class="form-label">Tipo de Evento</label>
                            <select class="form-select" id="eventTypeFilter" name="eventType">
                                <option value="">Todos los eventos</option>
                                <!-- Populated via AJAX -->
                            </select>
                        </div>

                        <!-- Entity Type Filter -->
                        <div class="col-md-6 col-lg-2">
                            <label for="entityTypeFilter" class="form-label">Tipo de Entidad</label>
                            <select class="form-select" id="entityTypeFilter" name="entityType">
                                <option value="">Todas las entidades</option>
                                <!-- Populated via AJAX -->
                            </select>
                        </div>

                        <!-- Result Filter -->
                        <div class="col-md-6 col-lg-2">
                            <label for="resultFilter" class="form-label">Resultado</label>
                            <select class="form-select" id="resultFilter" name="result">
                                <option value="">Todos los resultados</option>
                                @foreach (var result in Model.ResultTypes)
                                {
                                    <option value="@result">@result</option>
                                }
                            </select>
                        </div>

                        <!-- Search Button -->
                        <div class="col-md-12 col-lg-1">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="button" class="btn btn-primary" onclick="searchAuditTrail()">
                                    <i class="bi bi-search"></i>
                                    <span class="d-none d-lg-inline ms-1">Buscar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Results Card -->
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Resultados de Auditoría
                            <span id="resultsCount" class="badge bg-secondary ms-2">0</span>
                        </h6>
                    </div>
                    <div class="col-auto">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-secondary" onclick="refreshAuditData()" data-bs-toggle="tooltip" title="Actualizar">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="expandAllRows()" data-bs-toggle="tooltip" title="Expandir Detalles">
                                <i class="bi bi-arrows-expand"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="collapseAllRows()" data-bs-toggle="tooltip" title="Contraer Detalles">
                                <i class="bi bi-arrows-collapse"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <!-- Loading state -->
                <div id="auditLoading" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando auditoría...</span>
                    </div>
                    <div class="mt-2">Cargando datos de auditoría...</div>
                </div>

                <!-- Table View -->
                <div id="auditTableView" class="d-none">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th style="width: 20px;"></th>
                                    <th style="width: 140px;">Fecha/Hora</th>
                                    <th style="width: 120px;">Usuario</th>
                                    <th style="width: 120px;">Tipo de Evento</th>
                                    <th style="width: 100px;">Acción</th>
                                    <th style="width: 80px;">Resultado</th>
                                    <th style="width: 100px;">Entidad</th>
                                    <th>Nombre de Entidad</th>
                                    <th style="width: 120px;">IP/Ubicación</th>
                                    <th style="width: 80px;">Duración</th>
                                </tr>
                            </thead>
                            <tbody id="auditTableBody">
                                <!-- Dynamic content will be inserted here -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Empty state -->
                <div id="auditEmptyState" class="text-center py-5 d-none">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <h5 class="mt-3">No hay registros de auditoría</h5>
                    <p class="text-muted">
                        No se encontraron registros para los criterios de búsqueda especificados.<br>
                        Intente ajustar los filtros o ampliar el rango de fechas.
                    </p>
                </div>
            </div>

            <!-- Pagination Footer -->
            <div class="card-footer" id="auditPagination" style="display: none;">
                <div class="row align-items-center">
                    <div class="col">
                        <small class="text-muted">
                            Mostrando <span id="recordsShowing">0</span> registros
                        </small>
                    </div>
                    <div class="col-auto">
                        <nav>
                            <ul class="pagination pagination-sm mb-0" id="paginationControls">
                                <!-- Pagination will be generated here -->
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for detailed audit entry -->
<div class="modal fade" id="auditDetailModal" tabindex="-1" aria-labelledby="auditDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="auditDetailModalLabel">
                    <i class="bi bi-info-circle me-2"></i>
                    Detalles del Evento de Auditoría
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="auditDetailContent">
                <!-- Details will be populated here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/audit.css?v=1.0.0" />
}

@section Scripts {
    <script src="~/js/audit.js?v=1.1.0"></script>
    <script>
        // Initialize server-side variables
        window.auditUrls = {
            searchAuditData: '@Url.Action("SearchAuditData", "Audit")',
            getEventTypes: '@Url.Action("GetEventTypes", "Audit")',
            getEntityTypes: '@Url.Action("GetEntityTypes", "Audit")',
            exportAuditTrail: '@Url.Action("ExportAuditTrail", "Audit")'
        };

        // Initialize page
        $(document).ready(function() {
            loadFilterOptions();
            searchAuditTrail(); // Load initial data
            
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}