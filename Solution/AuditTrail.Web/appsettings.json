    "Provider": "Local", // Options: "Local", "S3"
    "LocalPath": "C:\\Work\\oncooo\\AuditTrail\\git\\TestFiles",
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt", ".jpg", ".jpeg", ".png", ".gif", ".zip", ".rar"],
    "S3": {
      "BucketName": "audittrail-documents",
      "Region": "us-east-1",
      "AccessKey": "",
      "SecretKey": ""
