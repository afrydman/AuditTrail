{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=AuditTrail;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "BaseUrl": "https://localhost:7001",
    "Timeout": 30
  },
  "Authentication": {
    "CookieName": "AuditTrailAuth",
    "ExpireTimeSpan": 30,
    "SlidingExpiration": true
  }
}
